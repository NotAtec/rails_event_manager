<%= simple_form_for(@event) do |f| %>
<%= f.error_notification %>
<h1 class="is-size-3"><strong>Basic Information</strong></h1>
<p class="is-size-7">Give your event a name, and tell your visitors why they really can't miss it <br> Add details, and tell us why your event is special.</p>
<div class="field">
  <div class="control">
    <%= f.input :title, label: "Title:", input_html: { class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Be clear and concise", autofocus: true, required: true %>
  </div>
</div>

<div class="field">
  <div class="control">
    <%= f.input :description, label: "Description:", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label"}, required: true%>
  </div>
</div>

<hr>

<h1 class="is-size-3"><strong>Location</strong></h1>
<p class="is-size-7">Tell us where your event will be held.</p>
<div class="field">
  <div class="control">
    <%= f.input :location, label: "Location:", input_html: { class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "21 Jumpstreet", required: true%>
  </div>
</div>

<hr>

<h1 class="is-size-3"><strong>Date</strong></h1>
<p class="is-size-7">Tell us when your event will be held.</p>
<div class="field">
  <div class="control">
    <%= f.input :date, label: "Date:", :error_html => { :id => "date_error"}, input_html: {class:"input"}, wrapper: false, label_html: {class: "label"}, placeholder: "YYYY-MM-DD", required: true%>
  </div>
</div>

<%= f.button :submit, class: "button is-info" %>
<% end %>

