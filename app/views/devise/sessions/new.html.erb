<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-one-third">
        <h1 class="title">Log in</h1>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <div class="control">
                <%= f.input :email,
                    required: false,
                    autofocus: true,
                    wrapper: false,
                    label: "Email:",
                    input_html: { class: "input", autocomplete: "email" },
                    label_html: { class: "label" }%>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.input :password,
                    required: false,
                    wrapper: false,
                    label: "Password:",
                    label_html: { class: "label" },
                    input_html: { autocomplete: "current-password", class: "input" } %>
              </div>
            </div>
            <div class="field">
              <div class="control"><%= f.input :remember_me, wrapper: false, as: :boolean if devise_mapping.rememberable? %></div>
            </div>
            <%= f.button :submit, "Log in", class: "button" %>
        <% end %>
        <br>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>  




