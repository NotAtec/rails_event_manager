<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-one-third">
        <h1 class="title ">Sign Up</h1>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="field">
            <div class="control">
              <%= f.input :username,
                  required: true,
                  autofocus: true,
                  label: "Username:",
                  input_html: { class: "input" },
                  wrapper: false,
                  label_html: { class: "label" }%>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :email,
                  required: true,
                  label: "Email:",
                  input_html: { class: "input", autocomplete: "email" },
                  wrapper: false,
                  label_html: { class: "label" }%>
            </div>
          </div>
          <div class="field columns">
            <div class="field column is-half">
              <div class="control">
                <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    label: "Password:",
                    input_html: { class: "input", autocomplete: "new-password" },
                    wrapper: false,
                    label_html: { class: "label" }%>
              </div>
            </div>
            <div class="field column is-half">
              <div class="control">
                <%= f.input :password_confirmation,
                    required: true,
                    label: "Confirm Password:",
                    input_html: { class: "input", autocomplete: "new-password" },
                    wrapper: false,
                    label_html: { class: "label" }%>
              </div>
            </div>
          </div>                              
          <%= f.button :submit, "Sign Up", class: "button is-primary"%>
        <% end %>
        <br>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>